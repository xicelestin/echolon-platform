# Echolon Platform - Production Environment Configuration
# This file contains all production environment variables
# DO NOT commit sensitive values - use GitHub Secrets instead

# Application Settings
APP_NAME=Echolon Platform
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
TIMEZONE=UTC

# API Configuration
API_TITLE=Echolon AI Business Optimization Platform
API_DESCRIPTION=Advanced ML-powered business intelligence and optimization platform
API_VERSION=1.0.0
API_DOCS_URL=/api/docs
API_REDOC_URL=/api/redoc
API_WORKERS=4
API_TIMEOUT=3600
API_MAX_CONNECTIONS=100

# FastAPI Backend Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=false
FASTAPI_LOG_CONFIG=logging.json

# Streamlit Dashboard Settings
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_LOGGER_LEVEL=info
STREAMLIT_CLIENT_SHOWERRORDETAILS=false
STREAMLIT_CACHE_EXPIRE_HOURS=24

# Database Configuration
DATABASE_URL=postgresql://echolon:${DB_PASSWORD}@postgres:5432/echolon
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false
DATABASE_SSL_MODE=prefer

# Redis Cache Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600
REDIS_POOL_SIZE=10
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_TIMEOUT=5

# Security & Authentication
API_KEY=${PROD_API_KEY}
SECRET_KEY=${PROD_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=["https://echolon-platform.com", "https://app.echolon-platform.com"]
CSRF_PROTECTION_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Email Configuration
SMTP_SERVER=${SMTP_SERVER}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM_EMAIL=noreply@echolon-platform.com
SMTP_FROM_NAME=Echolon Platform
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TIMEOUT=7200

# Cloud Storage Configuration
GCS_PROJECT_ID=${GCP_PROJECT_ID}
GCS_BUCKET_NAME=echolon-platform-data
GCS_CREDENTIALS_PATH=/app/secrets/gcp-credentials.json
S3_BUCKET_NAME=echolon-platform-prod
S3_REGION=us-east-1
S3_ACCESS_KEY=${AWS_ACCESS_KEY}
S3_SECRET_KEY=${AWS_SECRET_KEY}

# Monitoring & Observability
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
OPENTELEMETRY_ENABLED=true
OPENTELEMETRY_ENDPOINT=http://jaeger:4317

# Logging Configuration
LOG_FILE_PATH=/app/logs/app.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10
LOG_FORMAT=json
LOG_ROLLOVER_INTERVAL=midnight

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CUSTOM_REPORTS=true
FEATURE_SCHEDULED_EXPORTS=true
FEATURE_API_WEBHOOKS=true
FEATURE_CUSTOM_DASHBOARDS=true
FEATURE_ML_FORECASTING=true
FEATURE_REAL_TIME_ALERTS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=50000
RATE_LIMIT_BURST=100

# Data Processing
MAX_UPLOAD_SIZE_MB=500
MAX_BATCH_SIZE=10000
DATA_RETENTION_DAYS=365
ARCHIVE_OLD_DATA=true
ARCHIVE_AFTER_DAYS=90
COMPRESS_ARCHIVES=true

# Performance Tuning
DATABASE_QUERY_TIMEOUT=30
API_RESPONSE_TIMEOUT=60
BACKGROUND_TASK_TIMEOUT=3600
WORKER_POOL_SIZE=16
THREAD_POOL_SIZE=32
CACHE_WARM_ON_STARTUP=true

# GCP Cloud Run Settings
GCP_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=echolon-platform
CLOUD_RUN_MEMORY=4Gi
CLOUD_RUN_CPU=2
CLOUD_RUN_TIMEOUT=3600
CLOUD_RUN_CONCURRENCY=100

# Backup & Disaster Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=gs://echolon-backups
DISASTER_RECOVERY_ENABLED=true
DR_TEST_FREQUENCY=weekly

# Compliance & Security
DATA_ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=${ENCRYPTION_KEY}
PII_REDACTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
GDPR_COMPLIANCE_MODE=true
CCPA_COMPLIANCE_MODE=true
